<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00b8d4"
    android:orientation="vertical"
    tools:context="com.github.abdalimran.tourmate.Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/edt_profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/add_propic"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"
            android:layout_gravity="center"
            android:clickable="true"/>

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Enter Full Name"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Enter Email"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Enter Password"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:id="@+id/mobile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Enter Mobile No"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_mobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:inputType="phone"
            android:singleLine="true"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:id="@+id/country_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Enter Country"
            android:textColor="#ffffff"
            android:textSize="18sp"/>


        <AutoCompleteTextView
            android:id="@+id/edt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/edt_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Update Profile"
            android:textColor="#9a121111"
            android:background="@drawable/rounded_rectangle"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
